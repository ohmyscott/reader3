# Reader3 Configuration
# Copy this file to .env and fill in your actual values

# Books storage directory (absolute or relative path)
# Default: ./books (will be created if not exists)
BOOKS_DIR=./books

# Upload directory for EPUB files (absolute or relative path)
# Default: ./uploads (will be created if not exists)
UPLOAD_DIR=./uploads

# OpenAI Configuration
# OpenAI API Base URL (use official or custom endpoint)
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI API Key
OPENAI_API_KEY=your_api_key_here

# OpenAI Model to use for chat
OPENAI_MODEL=gpt-4o-mini

# Optional: Temperature for response generation (0.0-1.0)
OPENAI_TEMPERATURE=0.7

# Optional: Maximum tokens for response
OPENAI_MAX_TOKENS=2000